# Server
# Port the backend listens on
PORT=5055
# Node environment (development|test|production)
NODE_ENV=development

# Auth / Tokens
# HMAC secret used to sign tokens (change in production)
HMAC_SECRET=change-me-in-prod
# Token time-to-live in seconds (default: 86400 = 24h)
TOKEN_TTL_SEC=86400

# Database
# MongoDB connection URL
MONGO_URL=mongodb://localhost:27017/
# MongoDB database name
MONGO_DB_NAME=homeport

# Runtime
# Set to 1 to disable DB usage and run with in-memory store (used in CI/tests)
CI_NO_DB=0

# Encryption
# Optional AES-256-GCM key for encrypt/decrypt (min 16 chars). If empty, a key is derived from HMAC_SECRET.
#ENC_KEY=

# Seed data (dev convenience)
# Enable initial seed
SEED=true
# Companies to seed (comma-separated). If unset, DEFAULT_COMPANY is used.
SEED_COMPANIES=ACME

# Default entities
# Default company name (used for admin + default when SEED_COMPANIES is not set)
DEFAULT_COMPANY=ACME
# Default admin user credentials (seeded when SEED=true)
DEFAULT_ADMIN_EMAIL=admin@acme.test
DEFAULT_ADMIN_PASSWORD=admin
# Default workspace name suffix for the default workspace of each company
# Resulting name will be "<Company> <DEFAULT_WORKSPACE_NAME>"
DEFAULT_WORKSPACE_NAME=Default

# Notes
# - SEED_USERS are defined in code (src/config/env.js) and not read from env.
# - This .env is provided for convenience; to actually load it at runtime, either:
#   - export these variables in your shell, or
#   - run using a loader (e.g. `dotenv`) or your process manager (Docker Compose, systemd, etc.).
